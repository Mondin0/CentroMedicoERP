@model IEnumerable<GestionCentroMedico.Models.Mutual>

@{
    ViewData["Title"] = "Index";
}

<h1>Mutuales</h1>

<p>
    <a asp-action="Create">Registrar mutual</a>
</p>

<input type="text" id="searchInput" placeholder="Buscar...">
<table class="table table-hover" id="dataTable">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Descripción
            </th>
            <th>
                Valor
            </th>
            <th>
                Activo
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MutNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MutDescripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MutValor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MutActivo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MutId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.MutId">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.MutId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#searchInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#dataTable tbody tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
            });
        });
    });
</script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
