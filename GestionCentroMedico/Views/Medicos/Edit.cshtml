@model GestionCentroMedico.Models.Medico

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Medico</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MedId" />
            <div class="form-group">
                <label asp-for="MedNombre" class="control-label">Nombre</label>
                <input asp-for="MedNombre" class="form-control" />
                <span asp-validation-for="MedNombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedApellido" class="control-label">Apellido</label>
                <input asp-for="MedApellido" class="form-control" />
                <span asp-validation-for="MedApellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedEspecialidad" class="control-label">Especialidad</label>
                <input asp-for="MedEspecialidad" class="form-control" />
                <span asp-validation-for="MedEspecialidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedMatricula" class="control-label">Matricula</label>
                <input asp-for="MedMatricula" class="form-control" />
                <span asp-validation-for="MedMatricula" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="MedActivo" /> @*@Html.DisplayNameFor(model => model.MedActivo)*@Activo
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
